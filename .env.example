# Device polling intervals (milliseconds)
HID_JOG_POLL_INTERVAL=8
HID_BUTTON_POLL_INTERVAL=16
HID_FADER_POLL_INTERVAL=16

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=false
